<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/register_btn_pressed" />
            <corners android:radius="2dp" />
            <stroke android:color="@color/register_btn_border" android:width="1dp" />
            <padding android:bottom="3dp"
                android:top="3dp"
                android:left="3dp"
                android:right="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/transparent" />
            <padding android:bottom="3dp"
                android:top="3dp"
                android:left="3dp"
                android:right="3dp" />
        </shape>
    </item>
</selector>