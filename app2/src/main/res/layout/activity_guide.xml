<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/guide_layout"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/guide_animation_layout"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_alignParentTop="true"
        android:paddingTop="125dp"
        android:layout_above="@+id/guide_buttons_layout"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/guide_page1_layout"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:src="@drawable/guide_page1_logo_afu"
                android:id="@+id/guide_page1_center2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guide_page1_logo_luojisiwei"
                android:id="@+id/guide_page1_center1"
                android:layout_above="@id/guide_page1_center2"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guide_page1_logo_durex"
                android:layout_below="@id/guide_page1_center2"
                android:layout_toRightOf="@id/guide_page1_center2"
                android:layout_toEndOf="@id/guide_page1_center2"
                android:layout_marginTop="10dp"
                android:id="@+id/guide_page1_right3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guide_page1_logo_yunifang"
                android:id="@+id/guide_page1_left4"
                android:layout_below="@+id/guide_page1_left3"
                android:layout_marginTop="20dp"
                android:layout_marginRight="55dp"
                android:layout_toLeftOf="@+id/guide_page1_right3"
                android:layout_toStartOf="@+id/guide_page1_right3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guide_page1_logo_nanrenwa"
                android:id="@+id/guide_page1_left3"
                android:layout_alignBottom="@+id/guide_page1_right2"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/guide_page1_center2"
                android:layout_toStartOf="@id/guide_page1_center2"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guide_page1_logo_aikangguobin"
                android:id="@+id/guide_page1_left2"
                android:layout_toLeftOf="@id/guide_page1_center2"
                android:layout_toStartOf="@id/guide_page1_center2"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="22dp"
                android:layout_above="@+id/guide_page1_left3" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guide_page1_logo_wis"
                android:id="@+id/guide_page1_left1"
                android:layout_above="@id/guide_page1_left2"
                android:layout_marginBottom="22dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/guide_page1_center2"
                android:layout_toStartOf="@id/guide_page1_center2"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/guide_page1_logo_huangyaoshi"
                android:layout_above="@id/guide_page1_right3"
                android:layout_toRightOf="@id/guide_page1_center2"
                android:layout_toEndOf="@id/guide_page1_center2"
                android:id="@+id/guide_page1_right2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/guide_page1_logo_weflower"
                android:layout_above="@id/guide_page1_right2"
                android:layout_toRightOf="@id/guide_page1_center2"
                android:layout_toEndOf="@id/guide_page1_center2"
                android:id="@+id/guide_page1_right1" />

        </RelativeLayout>

        <!--
        <GridView
            android:id="@+id/guide_view_customer_logos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="64dp"
            android:background="@null"
            android:visibility="gone"
            android:numColumns="3"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:verticalSpacing="3dp"
            android:horizontalSpacing="3dp"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:columnCount="3" /> -->

        <LinearLayout
            android:id="@+id/guide_page2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:visibility="gone"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/guide_page2_banner"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:src="@drawable/guide_page2_banner_bg"/>
                
                <LinearLayout
                    android:id="@+id/guide_page2_photo_layout"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/guide_page2_photo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/guide_page2_banner_photo1"/>
                    <ImageView
                        android:id="@+id/guide_page2_photo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/guide_page2_banner_photo2"/>
                    <ImageView
                        android:id="@+id/guide_page2_photo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="28dp"
                        android:layout_marginEnd="28dp"
                        android:src="@drawable/guide_page2_banner_photo3"/>
                </LinearLayout>
            </RelativeLayout>

            <ListView
                android:id="@+id/guide_view_products"
                android:divider="@color/transparent"
                android:layout_marginTop="12dp"
                android:dividerHeight="12dp"
                android:visibility="invisible"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/guide_page3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:visibility="invisible"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="vertical">

            <SurfaceView
                android:layout_alignParentTop="true"
                android:id="@+id/guide_page3_canvas"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/guide_page3_banner"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:src="@drawable/guide_page3_img1"/>

            <LinearLayout
                android:id="@+id/guide_page3_logos_layout1"
                android:layout_below="@id/guide_page3_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/guide_page3_logo1"
                    android:layout_width="wrap_content"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/guide_page3_logo1"/>
                <ImageView
                    android:id="@+id/guide_page3_logo2"
                    android:layout_marginTop="20dp"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/guide_page3_logo2"/>
                <ImageView
                    android:id="@+id/guide_page3_logo3"
                    android:layout_width="wrap_content"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/guide_page3_logo5"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/guide_page3_logos_layout2"
                android:layout_below="@id/guide_page3_logos_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/guide_page3_logo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:src="@drawable/guide_page3_logo3"/>
                <ImageView
                    android:id="@+id/guide_page3_logo5"
                    android:layout_width="wrap_content"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/guide_page3_logo4"/>
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:layout_above="@+id/guide_buttons_layout"
        android:id="@+id/guide_view_pager"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RadioGroup
        android:id="@+id/guide_pager_items"
        android:layout_above="@+id/guide_buttons_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/guide_pager_item1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="1dp"
            android:checked="true"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/guide_pager_item_bg" />
        <RadioButton
            android:id="@+id/guide_pager_item2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="1dp"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/guide_pager_item_bg" />
        <RadioButton
            android:id="@+id/guide_pager_item3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="1dp"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/guide_pager_item_bg" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/guide_buttons_layout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/guide_btn_login"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/guide_button_login"
            android:text="Login"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_height="42dp" />
        <Button
            android:id="@+id/guide_btn_register"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:background="@drawable/guide_button_register"
            android:text="Register"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_height="42dp" />
    </LinearLayout>

</RelativeLayout>