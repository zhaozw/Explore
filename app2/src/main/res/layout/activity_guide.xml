<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/guide_layout"
    android:background="@color/white">



    <FrameLayout
        android:id="@+id/guide_animation_layout"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_alignParentTop="true"
        android:paddingTop="125dp"
        android:layout_above="@+id/guide_buttons_layout"
        android:layout_height="match_parent">
        <GridView
            android:id="@+id/guide_view_customer_logos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="64dp"
            android:background="@null"
            android:numColumns="3"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:verticalSpacing="3dp"
            android:horizontalSpacing="3dp"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:columnCount="3" />
        <ListView
            android:id="@+id/guide_view_products"
            android:visibility="gone"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:divider="@color/transparent"
            android:dividerHeight="12dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

        <RelativeLayout
            android:id="@+id/guide_page3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="32dp"
            android:visibility="invisible"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <SurfaceView
                android:layout_alignParentTop="true"
                android:id="@+id/guide_page3_canvas"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/guide_page3_banner"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:src="@drawable/page3_img1"/>

            <LinearLayout
                android:id="@+id/guide_page3_logos_layout1"
                android:layout_below="@id/guide_page3_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/guide_page3_logo1"
                    android:layout_width="wrap_content"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/page3_logo1"/>
                <ImageView
                    android:id="@+id/guide_page3_logo2"
                    android:layout_marginTop="20dp"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/page3_logo2"/>
                <ImageView
                    android:id="@+id/guide_page3_logo3"
                    android:layout_width="wrap_content"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/page3_logo5"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/guide_page3_logos_layout2"
                android:layout_below="@id/guide_page3_logos_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/guide_page3_logo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:src="@drawable/page3_logo3"/>
                <ImageView
                    android:id="@+id/guide_page3_logo5"
                    android:layout_width="wrap_content"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/page3_logo4"/>
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:layout_above="@+id/guide_buttons_layout"
        android:id="@+id/guide_view_pager"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RadioGroup
        android:id="@+id/guide_pager_items"
        android:layout_above="@+id/guide_buttons_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/guide_pager_item1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="1dp"
            android:checked="true"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/guide_pager_item_bg" />
        <RadioButton
            android:id="@+id/guide_pager_item2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="1dp"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/guide_pager_item_bg" />
        <RadioButton
            android:id="@+id/guide_pager_item3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="1dp"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/guide_pager_item_bg" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/guide_buttons_layout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/guide_btn_login"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/guide_button_login"
            android:text="Login"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginRight="4dp"
            android:layout_height="42dp" />
        <Button
            android:id="@+id/guide_btn_register"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:background="@drawable/guide_button_register"
            android:text="Register"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            android:layout_height="42dp" />
    </LinearLayout>

</RelativeLayout>