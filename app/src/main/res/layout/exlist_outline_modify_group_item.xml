<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exlist_outline_modify_group_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/exlist_outline_modify_group_btns"
        android:orientation="vertical"
        android:paddingLeft="3dp" >

        <TextView
            android:id="@+id/exlist_outline_modify_group_title1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/outline_modify_text_height"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/app_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/exlist_outline_modify_group_title2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/outline_modify_text_height"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/app_text" />

            <TextView
                android:id="@+id/exlist_outline_modify_group_title3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/outline_modify_text_height"
                android:ellipsize="end"
                android:textColor="@color/exlist_outline_modify_title_text"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/app_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/exlist_outline_modify_group_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/exlist_outline_group_modify_btn_edit"
            android:layout_width="@dimen/outline_modify_btn_height"
            android:layout_height="@dimen/outline_modify_btn_width"
            android:background="@drawable/imgbtn_outline_exlist_modify_bg"
            android:contentDescription="@string/app_text"
            android:focusable="false"
            android:src="@drawable/content_edit_icon2" />

        <ImageButton
            android:id="@+id/exlist_outline_modify_group_btn_delete"
            android:layout_width="@dimen/outline_modify_btn_height"
            android:layout_height="@dimen/outline_modify_btn_width"
            android:background="@drawable/imgbtn_outline_exlist_modify_bg"
            android:contentDescription="@string/app_text"
            android:focusable="false"
            android:src="@drawable/content_discard_icon2" />
    </LinearLayout>

</RelativeLayout>