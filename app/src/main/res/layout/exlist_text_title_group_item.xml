<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/exlist_detailinfo_layout"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/exlist_detailinfo_tv_group_title1"
        android:layout_width="0dp"
        android:layout_height="@dimen/exlist_group_item_height"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:text="@string/app_text" />

    <TextView
        android:id="@+id/exlist_detailinfo_tv_group_title2"
        android:layout_width="0dp"
        android:layout_height="@dimen/exlist_group_item_height"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/app_text" />

    <TextView
        android:id="@+id/exlist_detailinfo_tv_group_title3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/exlist_group_item_height"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="8"
        android:visibility="gone"
        android:singleLine="true"
        android:text="@string/app_text" />

</LinearLayout>