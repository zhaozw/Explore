<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/list_search_list_bg"
    android:paddingLeft="8dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/home_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/app_text"
        android:textColor="@color/text_c" />

    <TextView
        android:id="@+id/home_news_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/app_text"
        android:textColor="@color/text_c" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sepline_height"
        android:layout_marginTop="5dp"
        android:background="@color/home_news_line_c" />

</LinearLayout>