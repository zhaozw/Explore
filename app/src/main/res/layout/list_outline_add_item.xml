<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/exlist_withbtn_layout"
    android:padding="8dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/list_outline_add_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:textColor="@color/contents_text"
        android:layout_toLeftOf="@+id/list_outline_add_btn_layout"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:text="@string/app_test" />

    <RelativeLayout
        android:id="@+id/list_outline_add_btn_layout"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/list_outline_add_btn"
            style="@style/DefaultImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_text"
            android:focusable="false"
            android:src="@drawable/content_add_icon2" />

    </RelativeLayout>

</RelativeLayout>