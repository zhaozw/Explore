<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/act_cusmodify_cusinfo_btn_layout"
        android:layout_alignParentTop="true"
        android:background="@color/content_bg"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/ProductModifyItemTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/product_modify_item_height"
                android:text="@string/cusmodify_title_code" />

            <EditText
                android:id="@+id/act_cusmodify_cuscode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="text" >
            </EditText>

            <TextView
                style="@style/ProductModifyItemTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/product_modify_item_height"
                android:text="@string/cusmodify_title_namecn" />

            <EditText
                android:id="@+id/act_cusmodify_namecn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" >
            </EditText>

            <TextView
                style="@style/ProductModifyItemTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/product_modify_item_height"
                android:text="@string/cusmodify_title_namecns" />

            <EditText
                android:id="@+id/act_cusmodify_namecns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" >
            </EditText>

            <TextView
                style="@style/ProductModifyItemTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/product_modify_item_height"
                android:text="@string/cusmodify_title_nameen" />

            <EditText
                android:id="@+id/act_cusmodify_nameen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" >
            </EditText>

            <TextView
                style="@style/ProductModifyItemTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/product_modify_item_height"
                android:text="@string/cusmodify_title_nameens" />

            <EditText
                android:id="@+id/act_cusmodify_nameens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" >
            </EditText>

            <TextView
                style="@style/ProductModifyItemTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/product_modify_item_height"
                android:text="@string/cusmodify_title_companycode" />

            <EditText
                android:id="@+id/act_cusmodify_companycode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" >
            </EditText>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/act_cusmodify_cusinfo_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/coleee"
        android:orientation="horizontal"
        android:padding="2dp" >

        <Button
            android:id="@+id/act_cusmodify_cusinfo_btn_submit"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_save" />

        <Button
            android:id="@+id/act_cusmodify_cusinfo_btn_reset"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_reset" />
    </LinearLayout>

    <include
        android:layout_alignParentTop="true"
        layout="@layout/layout_loading"
        android:visibility="gone" />

</RelativeLayout>