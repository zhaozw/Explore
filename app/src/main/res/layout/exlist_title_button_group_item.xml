<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/exlist_withbtn_layout"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/exlist_withbtn_tv_group_title1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/exlist_group_item_height"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:singleLine="true"
        android:text="@string/app_text" />

    <TextView
        android:id="@+id/exlist_withbtn_tv_group_title2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/exlist_group_item_height"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="8"
        android:singleLine="true"
        android:text="@string/app_text" />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="@dimen/exlist_group_item_height"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/exlist_withbtn_tv_group_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DefaultImageButton"
            android:contentDescription="@string/app_text"
            android:focusable="false"
            android:src="@drawable/content_add_icon2" />
    </RelativeLayout>

</LinearLayout>