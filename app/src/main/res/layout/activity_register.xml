<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/act_register_entry_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/register_layout_background"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/register_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/login_username"
            android:inputType="text"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:shadowColor="@color/col333"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/register_layout_border"
            android:padding="1dp" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/login_password"
            android:inputType="textPassword"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:shadowColor="@color/col333"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_register_entry_layout"
        android:layout_margin="20dp"
        android:text="@string/register_btn_text" />

    <TextView
        android:id="@+id/register_tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/register_summary_background"
        android:padding="5dp"
        android:text="@string/register_statement"
        android:textColor="@color/colaaa"
        android:textSize="14sp" />

</RelativeLayout>