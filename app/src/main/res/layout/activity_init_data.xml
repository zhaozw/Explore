<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_first_open" />

    <LinearLayout
        android:id="@+id/act_appinit_load_procategory_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_init_item_size"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/init_product_category" />

        <ProgressBar
            android:id="@+id/act_appinit_load_procategory"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/act_init_progressbar_size"
            android:layout_height="@dimen/act_init_progressbar_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/act_appinit_procategory_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_wait"
            android:textSize="@dimen/fs_init_title"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_appinit_load_location_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_init_item_size"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/init_location_data" />

        <ProgressBar
            android:id="@+id/act_appinit_load_location"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/act_init_progressbar_size"
            android:layout_height="@dimen/act_init_progressbar_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/act_appinit_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_wait"
            android:textSize="@dimen/fs_init_title"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>