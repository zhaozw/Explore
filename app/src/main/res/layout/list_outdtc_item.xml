<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exlist_detailinfo_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/list_item_outdtc_partno"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_outdtc_item_height"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:singleLine="true"
        android:text="@string/app_text" />

    <View
        android:layout_width="@dimen/app_thin_line_size"
        android:layout_height="@dimen/list_outdtc_item_height"
        android:background="@color/colccc" />

    <TextView
        android:id="@+id/list_item_outdtc_qty"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_outdtc_item_height"
        android:layout_weight="3"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_text" />

    <View
        android:layout_width="@dimen/app_thin_line_size"
        android:layout_height="@dimen/list_outdtc_item_height"
        android:background="@color/colccc" />

    <TextView
        android:id="@+id/list_item_outdtc_soprice"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_outdtc_item_height"
        android:layout_weight="3"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_text" />

</LinearLayout>