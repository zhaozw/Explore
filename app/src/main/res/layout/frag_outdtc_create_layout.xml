<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag_product_condition_scv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="true"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <EditText
            android:id="@+id/frag_edt_outdtc_transportCode1"
            style="@style/SearchConditionEditText"
            android:hint="@string/out_transportcode1"
            android:inputType="text" >
        </EditText>

        <Spinner
            android:id="@+id/frag_spi_outdtc_cusdept"
            style="@style/SearchConditionSpinner" >
        </Spinner>

        <Spinner
            android:id="@+id/frag_spi_outdtc_sologon"
            style="@style/SearchConditionSpinner" >
        </Spinner>

        <Spinner
            android:id="@+id/frag_edt_outdtc_address"
            style="@style/SearchConditionSpinner" >
        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="2dp" >

            <EditText
                android:id="@+id/frag_edt_outdtc_shipto"
                style="@style/SearchConditionEditText2"
                android:layout_weight="3"
                android:enabled="false"
                android:hint="@string/out_shipto"
                android:inputType="text" >
            </EditText>

            <Button
                android:id="@+id/frag_btn_outdtc_shipto"
                style="@style/SearchConditionButton"
                android:layout_weight="1"
                android:text="@string/search_choose" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="2dp" >

            <EditText
                android:id="@+id/frag_edt_outdtc_vatto"
                style="@style/SearchConditionEditText2"
                android:layout_weight="3"
                android:enabled="false"
                android:hint="@string/out_vatto"
                android:inputType="text" >
            </EditText>

            <Button
                android:id="@+id/frag_btn_outdtc_vatto"
                style="@style/SearchConditionButton"
                android:layout_weight="1"
                android:text="@string/search_choose" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/frag_edt_outdtc_outtime"
                style="@style/SearchConditionEditText2"
                android:layout_weight="3"
                android:enabled="false"
                android:hint="@string/out_outtime"
                android:inputType="date" >
            </EditText>

            <Button
                android:id="@+id/frag_btn_outdtc_outtime"
                style="@style/SearchConditionButton"
                android:layout_weight="1"
                android:text="@string/search_choose" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/frag_btn_outdtc_save"
                style="@style/SearchPageButton"
                android:layout_weight="1"
                android:text="@string/outdtc_set_detail" />

            <Button
                android:id="@+id/frag_btn_outdtc_reset"
                style="@style/SearchPageButton"
                android:layout_weight="1"
                android:text="@string/search_reset" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</ScrollView>