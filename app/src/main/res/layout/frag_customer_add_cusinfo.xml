<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/ProductModifyItemTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_modify_item_height"
            android:text="@string/cusmodify_title_namecn" />

        <EditText
            android:id="@+id/frag_cusmodify_namecn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="text" >
        </EditText>

        <TextView
            style="@style/ProductModifyItemTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_modify_item_height"
            android:text="@string/cusmodify_title_namecns" />

        <EditText
            android:id="@+id/frag_cusmodify_namecns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="text" >
        </EditText>

        <TextView
            style="@style/ProductModifyItemTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_modify_item_height"
            android:text="@string/cusmodify_title_nameen" />

        <EditText
            android:id="@+id/frag_cusmodify_nameen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="text" >
        </EditText>

        <TextView
            style="@style/ProductModifyItemTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_modify_item_height"
            android:text="@string/cusmodify_title_nameens" />

        <EditText
            android:id="@+id/frag_cusmodify_nameens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="text" >
        </EditText>

        <TextView
            style="@style/ProductModifyItemTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_modify_item_height"
            android:text="@string/cusmodify_title_companycode" />

        <EditText
            android:id="@+id/frag_cusmodify_companycode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="text" >
        </EditText>
    </LinearLayout>

</ScrollView>