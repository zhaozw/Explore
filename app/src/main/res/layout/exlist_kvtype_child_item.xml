<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/out_exlist_child_background"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/exlist_tv_child_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/out_exlist_child_title"
        android:drawableRight="@color/col999"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLength="15"
        android:paddingLeft="@dimen/exlist_text_padding"
        android:minHeight="@dimen/exlist_child_item_height"
        android:text="@string/app_text" />

    <TextView
        android:id="@+id/exlist_tv_child_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/exlist_text_padding"
        android:paddingRight="@dimen/exlist_text_padding"
        android:minHeight="@dimen/exlist_child_item_height"
        android:text="@string/app_text" />

</LinearLayout>