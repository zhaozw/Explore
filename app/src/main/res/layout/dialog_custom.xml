<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_custom_style"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:id="@+id/dialog_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_custom_top_style"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_cus_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_text"
            android:textColor="@color/dlg_title_c"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_cus_layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/dialog_cus_tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:text="@string/app_text"
            android:textColor="@color/dlg_message_c" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_cus_pbtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dlg_button_height"
            android:layout_weight="1"
            android:background="@drawable/dialog_custom_btn_bg"
            android:textColor="@color/white2"
            android:textSize="@dimen/fs_dlg_btn" />
        
        <View android:layout_width="3dp"
            android:layout_height="@dimen/dlg_button_height"
            android:background="@color/transparent"/>

        <Button
            android:id="@+id/dialog_cus_ebtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dlg_button_height"
            android:layout_weight="1"
            android:background="@drawable/dialog_custom_btn_bg"
            android:textColor="@color/white2"
            android:textSize="@dimen/fs_dlg_btn" />
        
        <View android:layout_width="3dp"
            android:layout_height="@dimen/dlg_button_height"
            android:background="@color/transparent"/>

        <Button
            android:id="@+id/dialog_cus_nbtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dlg_button_height"
            android:layout_weight="1"
            android:background="@drawable/dialog_custom_btn_bg"
            android:textColor="@color/white2"
            android:textSize="@dimen/fs_dlg_btn" />
    </LinearLayout>

</LinearLayout>